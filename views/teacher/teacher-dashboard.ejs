<% layout('boilerplate') %>

<div class="jumbotron"style="background-color: transparent;">
  <div class="container">
    <p class="text-center">
    <a href="/create-course" class="btn btn-primary btn-lg">Create a new Course</a></p>
  </div>
</div>

<div class="container">

  <div class="row">

    <h2 class="text-center" >Courses that you teach</h2>
    <hr />

    <% for (var i = 0; i < foundUser.coursesTeach.length; i++) { %>
    <div class="col-md-4 courseed">

      <a href="/courses/<%= foundUser.coursesTeach[i].course._id %>"
        >

        <div class="panel panel-default">


          <div class="panel-body csrx" >
            <h4 ><%= foundUser.coursesTeach[i].course.title %></h4>
            <p style="text-align:justify"><i class="fa fa-fw fa-user"></i><%= foundUser.coursesTeach[i].course.desc %></p>
        
            <a href="/edit-course/<%= foundUser.coursesTeach[i].course._id %>" class="btn btn-warning" style="margin-top: 4%;padding-top:3%;margin-left:43%;border-radius:50%;padding-bottom: 3%;">
            <i class="fa fa-fw fa-pencil"aria-hidden="true"></i>
            </a>
          </div>

      </div>
      
      </a>
    </div>
    <% } %>

  </div>

</div>
